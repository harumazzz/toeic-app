{
  "dashboard": {
    "id": null,
    "title": "TOEIC Advanced Application Overview",
    "tags": ["toeic", "advanced", "overview"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Score",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(up{job=\"toeic-app\"}) * 100",
            "legendFormat": "Health %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"toeic-app\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Response Time P95",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"toeic-app\"}[5m]))",
            "legendFormat": "P95 Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"toeic-app\", status_code!~\"2..\"}[5m]) / rate(http_requests_total{job=\"toeic-app\"}[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "yAxes": [
          {
            "label": "Error %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(db_queries_total{job=\"toeic-app\"}[5m])",
            "legendFormat": "{{operation}} queries/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket{job=\"toeic-app\"}[5m]))",
            "legendFormat": "P95 Query Time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cache_hits_total{job=\"toeic-app\"}[5m]) / (rate(cache_hits_total{job=\"toeic-app\"}[5m]) + rate(cache_misses_total{job=\"toeic-app\"}[5m])) * 100",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "yAxes": [
          {
            "label": "Hit Rate %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "memory_usage_bytes{job=\"toeic-app\", type=\"heap\"} / 1024 / 1024",
            "legendFormat": "Heap Memory MB"
          },
          {
            "expr": "goroutines_count{job=\"toeic-app\"}",
            "legendFormat": "Goroutines"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Business Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(exams_completed_total{job=\"toeic-app\"}[5m])",
            "legendFormat": "Exams Completed/sec"
          },
          {
            "expr": "rate(user_registrations_total{job=\"toeic-app\"}[5m])",
            "legendFormat": "User Registrations/sec"
          },
          {
            "expr": "rate(audio_uploads_total{job=\"toeic-app\"}[5m])",
            "legendFormat": "Audio Uploads/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ]
  }
}
